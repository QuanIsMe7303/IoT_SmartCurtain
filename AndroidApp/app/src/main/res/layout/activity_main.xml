<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Curtain System"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#0073a5"
        android:padding="20dp"
        android:background="#ffffff"
        android:layout_marginBottom="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:gravity="right"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Danh sách nhà"
            android:layout_weight="1"
            android:padding="8dp"
            android:textSize="24dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn_add_house"
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:drawableLeft="@drawable/baseline_add_24"
            android:background="@drawable/rectangle_button"
            android:paddingLeft="13sp"
            android:textColor="#ffffff"
            android:backgroundTint="#0073a5"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="50sp"
            android:layout_height="35sp"
            android:src="@drawable/turn_off"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_white"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_houseList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>
